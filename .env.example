# Database Configuration
DATABASE_URL=postgres://crewee:crewee_password@localhost:5432/crewee_dev?sslmode=disable
TEST_DATABASE_URL=postgres://crewee:crewee_password@localhost:5433/crewee_test?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Server Configuration
PORT=8080
ENV=development

# AWS Configuration (for development)
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=your-user-pool-id
COGNITO_CLIENT_ID=your-client-id
COGNITO_REGION=ap-northeast-1

# JWT Configuration
JWT_SECRET=your-jwt-secret-for-development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./tmp/uploads

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600